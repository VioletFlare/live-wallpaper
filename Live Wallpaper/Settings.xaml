<Window x:Class="Live_Wallpaper.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Live_Wallpaper"
        mc:Ignorable="d"
        Title="Setting" Height="150" Width="340">
    <Grid>
        <Label Content="Video:" HorizontalAlignment="Left" Margin="9,6,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="89,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.343,-1.241" IsEnabled="False"/>
        <Label Content="Volume:" HorizontalAlignment="Left" Margin="9,37,0,0" VerticalAlignment="Top" Width="75"/>
        <Slider x:Name="slVolume" HorizontalAlignment="Left" Margin="89,45,0,0" VerticalAlignment="Top" Width="150" Maximum="1" LargeChange="0.25" SmallChange="0.05" IsSnapToTickEnabled="True" TickFrequency="0.05"></Slider>
        <Button x:Name="btnChoose" Content="Choose" HorizontalAlignment="Left" Margin="244,9,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="244,79,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="164,79,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="{Binding ElementName=slVolume, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="244,37,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
